<Window x:Class="Valency.Chatt.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Valency.Chatt.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="SendMessageBox" Width="600" Height="30" Margin="0,0,5,0"/>
            <Button Width="80" Height="30" Content="发送" Click="Button_Click"/>
        </StackPanel>
        <ListBox x:Name="MessageHistory" Margin="5"/>
    </DockPanel>
</Window>
